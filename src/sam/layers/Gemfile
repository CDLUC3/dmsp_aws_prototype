  gem 'rubocop'
  gem 'rubocop-rspec'
  gem 'aws-sdk-cognitoidentityprovider'
  gem 'aws-sdk-dynamodb'
  gem 'aws-sdk-eventbridge'
  # gem 'aws-sdk-s3'
  gem 'aws-sdk-sns'
